#include <iostream>
#include <string>
#include <locale>

using std::cout;
using std::endl;

bool is_vowel(char vowl){
  if (vowl == 'a' || vowl == 'e' || vowl == 'i' || vowl == 'o' || vowl == 'u' ){
    return true;
  }
  else{
    return false;
  }
}

std::string piglatinify(std::string word){
  std::string ret_val = "";
  for (int i = 0; i < word.length(); i++){
    word[i] = tolower(word[i]);
  }
  if (is_vowel(word[0])){
    ret_val = word + "ay";

  }
  else{
    ret_val = word.substr(1,word.length()) + word[0] + "ay";
  }
  return ret_val;

}

int main(){
  std::string ex1 = piglatinify("elephant");
  std::string ex2 = piglatinify("computer");
  std::string ex3 = piglatinify("television");
  std::string ex4 = piglatinify("autobiography");
